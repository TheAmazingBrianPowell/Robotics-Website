Satisfy Any

ErrorDocument 404 /error/404
ErrorDocument 403 /error/404
ErrorDocument 500 /error/500

RewriteEngine On
#rewrites to directories without filenames
#RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule ^(.*)/$ /$1 [L,R=301]

#rewrites files with php extension
#RewriteCond %{THE_REQUEST} ([^.]+)\.php [NC]
#RewriteRule ^ /%1 [NC,L,R=301]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [NC,L]

#rewrites files with html extension
RewriteCond %{REQUEST_URI} \.html$ [NC]
RewriteRule ^ https://rhs-robotics.herokuapp.com/%{REQUEST_URI} [NC,L,R=301]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]

#rewrites http to https
RewriteCond %{HTTP:X-Forwarded-Proto} !https 
RewriteRule ^ https://rhs-robotics.herokuapp.com/%{REQUEST_URI} [L,R=301]
